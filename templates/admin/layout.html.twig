<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block meta_data %}{% endblock %}
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/bootstrap-icons.min.css">
    {% block stylesheets %}{% endblock %}
    <link href="/assets/css/toasty.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body>
<header data-bs-theme="dark" class="mb-5">
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                    aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation"><span
                    class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                {% include 'admin/partials/top.menu.html.twig' %}
            </div>
            <div class="col-md-3 text-end">
                {% if app.user %}
                    <a href="{{ url('app_home') }}" class="text-white">{{ 'Привет, Админ'|trans({}, 'admin.top.menu') }}</a>

                    <a href="{{ url('app_logout') }}" class="btn btn-warning">{{ 'Выйти'|trans({}, 'admin.top.menu') }}</a>
                {% endif %}
                <div class="dropdown d-inline-block ms-2">
                    <button class="btn dropdown-toggle" type="button" id="languageDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        {{ app.request.locale|upper }}
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="languageDropdown">
                        <li><a class="dropdown-item{% if app.request.locale == 'ru' %} active{% endif %}" href="{{ path(app.request.get('_route', 'app_admin_dashboard'), app.request.get('_route_params', [])|merge({'_locale': 'ru'})) }}">RU</a></li>
                        <li><a class="dropdown-item{% if app.request.locale == 'en' %} active{% endif %}" href="{{ path(app.request.get('_route', 'app_admin_dashboard'), app.request.get('_route_params', [])|merge({'_locale': 'en'})) }}">ENG</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
</header>

{% if block('second_navigation') is not empty %}
    <nav class="py-3 bg-body-tertiary border-bottom">
        <div class="container-fluid">
            {% block second_navigation %}{% endblock %}
        </div>
    </nav>
{% endif %}

<main class="pt-1 pt-xl-5">
    <div class="container-fluid">
        {% block content %}{% endblock %}
    </div>
</main>
</body>

<script src="/assets/js/popper.min.js"></script>
<script src="/assets/js/bootstrap.bundle.min.js"></script>
<script src="/assets/js/jquery-3.7.1.min.js"></script>
<script src="/assets/js/toasty.min.js"></script>
<script src="/assets/js/toasty.options.no.sound.js"></script>
{% block javascripts %}{% endblock %}
</html>

