<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        {# Previous button #}
        <li class="page-item {{ currentPage == 1 ? 'disabled' }}">
            <a class="page-link" href="{{ path(path_item, {page: currentPage - 1}) }}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>

        {# First page #}
        {% if startPage > 1 %}
            <li class="page-item">
                <a class="page-link" href="{{ path(path_item, {page: 1}) }}">1</a>
            </li>
            {% if startPage > 2 %}
                <li class="page-item disabled">
                    <span class="page-link">...</span>
                </li>
            {% endif %}
        {% endif %}

        {# Page numbers #}
        {% for page in startPage..endPage %}
            <li class="page-item {{ page == currentPage ? 'active' }}">
                <a class="page-link" href="{{ path(path_item, {page: page}) }}">{{ page }}</a>
            </li>
        {% endfor %}

        {# Last page #}
        {% if endPage < totalPages %}
            {% if endPage < totalPages - 1 %}
                <li class="page-item disabled">
                    <span class="page-link">...</span>
                </li>
            {% endif %}
            <li class="page-item">
                <a class="page-link" href="{{ path(path_item, {page: totalPages}) }}">{{ totalPages }}</a>
            </li>
        {% endif %}

        {# Next button #}
        <li class="page-item {{ currentPage == totalPages ? 'disabled' }}">
            <a class="page-link" href="{{ path(path_item, {page: currentPage + 1}) }}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>
